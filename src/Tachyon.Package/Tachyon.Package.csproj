<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Description>A generalized interception package in .NET</Description>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeBuildOutput>false</IncludeBuildOutput>
		<PackageIcon>Icon.png</PackageIcon>
		<PackageId>Tachyon</PackageId>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageProjectUrl>https://github.com/jasonbock/tachyon</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageReleaseNotes>A changelog is available at https://github.com/JasonBock/Tachyon/blob/main/changelog.md</PackageReleaseNotes>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<PackageTags>Interception C# .NET</PackageTags>
		<PackageVersion>$(Version)</PackageVersion>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/jasonbock/tachyon</RepositoryUrl>
		<TargetFramework>netstandard2.0</TargetFramework>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.Analyzers" PrivateAssets="all" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="all" />
		<PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="" />
		<None Include="../../LICENSE" Pack="true" PackagePath="" />
		<None Include="../Images/Icon.png" Pack="true" PackagePath="" Visible="false" />
		<None
			Include="../artifacts/bin/Tachyon.Analysis/$(Configuration)/Tachyon.Analysis.dll"
			Pack="true"
			PackagePath="analyzers/dotnet/cs"
			Visible="false" />
		<None Include="../artifacts/bin/Tachyon.Package/$(Configuration)/_._" Pack="true" PackagePath="lib/netstandard2.0/_._" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="../Tachyon.Analysis/Tachyon.Analysis.csproj" ReferenceOutputAssembly="false" />
	</ItemGroup>
	<ItemGroup>
		<!--
		If you're wondering why there's a blank file being copied, it's to solve this issue:
		https://learn.microsoft.com/en-us/nuget/reference/errors-and-warnings/nu5128
		-->
		<None Update="_._">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>